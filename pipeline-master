properties([pipelineTriggers([githubPush()])])

pipeline {
    agent {
        label 'master'
    }

    stages {

        stage('Build') {
            steps {
                sh ' echo Build Stage'
            }
        }
        
        stage('CheckStyle') {
            steps {
                sh 'mvn -B verify checkstyle:checkstyle'
            }
        }
        
        stage('PMD') {
            steps {
                sh 'mvn pmd:pmd'
            }
        }
        
        stage('PMD_CPD') {
            steps {
                sh  'mvn pmd:cpd'
            }
        }
        
        stage('Find Bugs') {
            steps {
                echo 'Find Bugs'
            }
        }
        
        stage('Unit Test') {
            steps {
                echo 'Unit Test Stage'
            }
        }
    }
}
